extends layout.pug

block content
    .createPostForm
        form(method="post" action="/posts/create")
            input(type="hidden" name="_csrf" value=csrfToken)
            .postFieldInput
                label Title
                input#postTitleArea(type="text" name="title" required)
            .postFieldInput
                label Body
                textarea#postTextArea(name="textField" required)
            .topicPostInput
                each topic in topics
                    div
                        //-may have to add value attribute for input
                        input(type="checkbox" id=topic.id name=topic.name)
                        label#topicNameInput(for=topic.name) #{topic.name}
            .submitButtonDiv
                button#submitCreatePost(type="submit") Submit
