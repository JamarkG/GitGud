              img#searchBarIcon(src="/images/searchBar.png")
      div
        ul#navbar
          li#navbarLi1: a(href="/")
            img#homeIcon(src="/images/GGLogo.png")
          li#navbarLi2: a(href="/users/logout") Logout
      div.titleBox
        h2#welcomeTitle=title

    block content
