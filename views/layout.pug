doctype html
html
  head
      block head
        title= title
        script(src="/javascripts/index.js" type="module" defer)
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
        link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet")
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body.homePageBackground
    div
      div#searchBar
        form(method="get" action="/search/")
            input#searchInput(type="search" placeholder="Search..." name="search")
            button#searchBtn(type="submit" )
              img#searchBarIcon(src="/images/searchBar.png")
      div
        ul#navbar
          li#navbarLi1: a(href="/")
            img#homeIcon(src="/images/GGLogo.png")
          button#my-posts: a(href="/posts/user") My Posts
          button#profilePage: a(href="/users/profile") My Profile
          button#navbarLi2: a(href="/users/logout") Logout
      div.titleBoxTopics
        if title
          h2#welcomeTitle=title

    block content
