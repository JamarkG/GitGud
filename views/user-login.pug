doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  body.loginPage
    include utils.pug
    .loginForm
        img#home(src="/images/GGLogoWhite.png")
        #loginTitle GitGud
        p#slogan Quora for Gamers
        h2#title-format=title
        +ValidationErrorSummary(errors)
        form(method="post" action="/users/login")
            input(type="hidden" name="_csrf" value=csrfToken)
            div#formInput6
                label Email Address
                input.input-hover(type='email' name='emailAddress' placeholder="bart@appacademy.com" required)
            div#formInput7
                label Password
                input.input-hover(type='password' name='password' placeholder="StrongP@ssword!" required)
            div#submitbutton
                button(type='submit') Submit
            div.registerUser
                a(href="/users/register") Don't have an account? Register here!
