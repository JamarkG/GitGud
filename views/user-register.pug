doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet")
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
  body.loginPage
    include utils.pug
    .loginForm
        //- img#loginRegisterIcon(src="/images/GGLogoWhite.png")
        #loginTitle GitGud
        p#slogan Quora for Gamers
        .title-format-container
          h2#title-format=title
        +ValidationErrorSummary(errors)
        form(method="post" action="/users/register")
            input(type="hidden" name="_csrf" value=csrfToken)
            div#formInput1
                label First Name
                input.input-hover(type="text" name="firstName" placeholder="Bart" required)
            div#formInput2
                label Last Name
                input.input-hover(type="text" name="lastName" placeholder="Dorsy" required)
            div#formInput3
                label Password
                input.input-hover(type="password" name="password" placeholder="StrongP@ssword!" required)
            div#formInput4
                label Confirm Password
                input.input-hover(type="password" name="confirmPassword" placeholder="StrongP@ssword!" required)
            div#formInput5
                label Email
                input.input-hover(type="email" name="emailAddress" placeholder="bart@appacademy.com" required)
            div#submitbutton
                button(type="submit") Register
            div
                p: a(href="/users/login") Already have an account? Log in here!
